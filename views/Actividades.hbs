 <div class="container my-5">
        <h2 class="text-center mb-4">Registrar Actividad de Cultivo</h2>

        <!-- Formulario para registrar actividad de cultivo -->
        <form action="/cultivos/actividades" method="POST">

            <!-- Campo para la fecha y hora -->
            <div class="mb-3">
                <label for="fecha_hora" class="form-label">Fecha y Hora</label>
                <input type="datetime-local" class="form-control" id="fecha_hora" name="fecha_hora" required>
            </div>

            <!-- Campo para seleccionar el nombre de la actividad desde la base de datos -->
            <div class="mb-3">
                <label for="nombre_actividad" class="form-label">Nombre de la Actividad</label>
                <select class="form-select" id="nombre_actividad" name="nombre_actividad" required>
                    <option value="">Selecciona una actividad</option>
                    {{#each actividades}} <!-- Renderizar la lista de actividades desde la base de datos -->
                    <option value="{{this.nombre_actividad}}">{{this.nombre_actividad}}</option>
                    {{/each}}
                </select>
            </div>

            <!-- Campo para el tipo de cultivo -->
            <div class="mb-3">
                <label for="tipo_cultivo" class="form-label">Tipo de Cultivo</label>
                <input type="text" class="form-control" id="tipo_cultivo" name="tipo_cultivo" placeholder="Ingresa el tipo de cultivo" required>
            </div>

            <!-- Campo para el encargado -->
            <div class="mb-3">
                <label for="encargado" class="form-label">Encargado</label>
                <input type="text" class="form-control" id="encargado" name="encargado" placeholder="Nombre del encargado" required>
            </div>

            <!-- Campo para los insumos utilizados -->
            <div class="mb-3">
                <label for="insumos" class="form-label">Insumos Utilizados</label>
                <textarea class="form-control" id="insumos" name="insumos" rows="3" placeholder="Lista de insumos utilizados" required></textarea>
            </div>

            <!-- Botón de envío -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success">Registrar Actividad</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>