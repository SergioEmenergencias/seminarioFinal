<form action="/actividades" method="POST">
    <h2>Agregar Actividad</h2>
    <label for="fecha">Fecha:</label>
    <input type="date" id="fecha" name="fecha" required>

    <label for="actividad">Actividad:</label>
    <input type="text" id="actividad" name="actividad" required>

    <select name="id_cultivo" id="id_cultivo" required>
            <option value="">Seleccione un cultivo</option>
            {{#each cultivos}}
            <option value="{{this.id}}">{{this.cultivo_trabajado}}</option>
            {{/each}}
        </select>

    <label for="extensionTrabajada">Extensi√≥n Trabajada:</label>
    <input type="number" step="0.01" id="extensionTrabajada" name="extensionTrabajada" required>

    <label for="insumosUtilizados">Insumos Utilizados:</label>
    <input type="text" id="insumosUtilizados" name="insumosUtilizados" required>

    <label for="costoInsumos">Costo de Insumos:</label>
    <input type="number" step="0.01" id="costoInsumos" name="costoInsumos" required>

    <label for="jornales">Jornales:</label>
    <input type="number" id="jornales" name="jornales" required>

    <label for="costoJornal">Costo por Jornal:</label>
    <input type="number" step="0.01" id="costoJornal" name="costoJornal" required>

    <label for="costoTotal">Costo Total:</label>
    <input type="number" step="0.01" id="costoTotal" name="costoTotal" required>

    <button type="submit">Guardar Actividad</button>
</form>
