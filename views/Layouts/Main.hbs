<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>

  <!-- CSS -->
  <link href="/css/style.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link active" href="/home">Home</a>

          <!-- Menú desplegable para "Cultivos" -->
          <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              Cultivos
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="/agregarCultivo">Agregar Cultivo</a></li>
              <li><a class="dropdown-item" href="/Acciones">Realizar Actividades</a></li>
              <li><a class="dropdown-item" href="/cosecha">Cosecha</a></li>
              <li><a class="dropdown-item" href="/tablaCosecha">Mis cosechas</a></li>
              <li><a class="dropdown-item" href="/tablaCultivo">Mis cultivos</a></li>
              <li><a class="dropdown-item" href="/informacioCultivo"> Informe Cultivo</a></li>
              <li><a class="dropdown-item" href="/preparacionCultivo">Preparando la tierra</a></li>
              <li><a class="dropdown-item" href="/siembra">Siembra</a></li>
              <li><a class="dropdown-item" href="/fertilizacion">fertilizacion</a></li>
              <li><a class="dropdown-item" href="/Enfermedades">Enfermedades</a></li>
              <li><a class="dropdown-item" href="/produccion">Produccion</a></li>
              <li><a class="dropdown-item" href="/venta">A vender</a></li>
              <li><a class="dropdown-item" href="/"></a></li>
            </ul>
          </div>

          <a class="nav-item nav-link" href="/foros">Foros</a>
          <a class="nav-item nav-link" href="/auth/logout">Cerrar Sesión</a>
        </div>

        <!-- Mostrar el nombre y correo del usuario autenticado -->
        <div class="ms-auto navbar-nav">
          <a class="nav-item nav-link">Usuario: {{user.userName}}</a>
          <a class="nav-item nav-link">Correo: {{user.email}}</a>
        </div>
      </div>
    </div>
  </nav>

  <div class="container mt-3">
    {{{body}}}

    <div id="successPopup" class="alert alert-success" style="display: {{#if successMessage}}block{{else}}none{{/if}};">
      <div id="popupMessage">{{successMessage}}</div>
    </div>

    <div id="errorPopup" class="alert alert-danger" style="display: {{#if errorMessage}}block{{else}}none{{/if}};">
      <div id="errorMessage">{{errorMessage}}</div>
    </div>


    <!--  <button id="showSuccessBtn" class="btn btn-success">Mostrar Éxito</button>
            <button id="showErrorBtn" class="btn btn-danger">Mostrar Error</button>-->
    {{#if successMessage}}
    <script>
      document.getElementById('successPopup').style.display = 'block';
      document.getElementById('popupMessage').textContent = '{{successMessage}}';
      // Ocultar el mensaje de éxito después de 3 segundos
      setTimeout(() => {
        document.getElementById('successPopup').style.display = 'none';
      }, 3000);
    </script>
    {{/if}}

    {{#if errorMessage}}
    <script>
      document.getElementById('errorPopup').style.display = 'block';
      document.getElementById('errorMessage').textContent = '{{errorMessage}}';
      // Ocultar el mensaje de error después de 3 segundos
      setTimeout(() => {
        document.getElementById('errorPopup').style.display = 'none';
      }, 3000);
    </script>
    {{/if}}

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="../app/app.js"></script>
  <script>
    document.getElementById('showSuccessBtn').addEventListener('click', function () {
      // Mostrar un mensaje de éxito de prueba
      document.getElementById('successPopup').style.display = 'block';
      document.getElementById('popupMessage').textContent = 'Este es un mensaje de éxito de prueba!';
      // Ocultar el mensaje de éxito después de 3 segundos
      setTimeout(() => {
        document.getElementById('successPopup').style.display = 'none';
      }, 3000);
    });

    document.getElementById('showErrorBtn').addEventListener('click', function () {
      // Mostrar un mensaje de error de prueba
      document.getElementById('errorPopup').style.display = 'block';
      document.getElementById('errorMessage').textContent = 'Este es un mensaje de error de prueba!';
      // Ocultar el mensaje de error después de 3 segundos
      setTimeout(() => {
        document.getElementById('errorPopup').style.display = 'none';
      }, 3000);
    });
  </script>
</body>